<div class="main">
  <div class="container">
    <div class="course">
      
      <div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Course Data</h3>
  </div>
  <div class="panel-body">
    <p>Name : <%= @course.name %></p>
        <p>Id: <%= @course.id %></p>
        <p>Description: <%= @course.description %></p>
        <p>Status: <%= @course.status %></p>
  </div>
  <p align= "center" ><button type="button" class="btn btn-default btn-lg"><%= link_to "Edit", edit_course_path(@course) %></button></p>
</div>



    <h2>Students</h2>

          <table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <%  @students.each do |s| %>
    <tr>
      <th scope="row"><% s.id %></th>
      <td><%= s.name %></td>
      <td><%= s.register_number %></td>
      <td><%= s.status%></td>
    </tr>
    <% end %>
  </tbody>
</table>




  </div>
</div>
